# ===========================================
# Seer Engine Configuration
# ===========================================

# OpenAI API (REQUIRED for AI analysis)
OPENAI_API_KEY=your_openai_api_key

# Twitter API (REQUIRED - from twitterapi.io)
# No mock mode - real API key required for operation
TWITTER_API_KEY=your_twitter_api_key

# Opinion Trade API (REQUIRED - from opinion.trade)
# All three values required - no mock mode available
OPINION_API_KEY=your_opinion_api_key_here
OPINION_PRIVATE_KEY=0x1234567890abcdef...  # 64 character hex string
OPINION_MULTISIG_ADDR=0x1234567890123456789012345678901234567890  # Ethereum address (required for holding assets)

# BNB Chain RPC URL (Optional - defaults to public endpoint)
OPINION_RPC_URL=https://bsc-dataseed.binance.org

# Server Configuration
BACKEND_PORT=3001
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# Demo Mode (DEPRECATED - no longer functional)
# System now requires real API credentials
DEMO_MODE=false

